@page
@model RazorHomework.Pages.AddressesModel
@{
    ViewData["Title"] = "Addresses";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Address.StreetAddress"></label>
        <input type="text" asp-for="Address.StreetAddress" placeholder="Street Address"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.City"></label>
        <input type="text" asp-for="Address.City" placeholder="City"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.ZipCode"></label>
        <input asp-for="Address.ZipCode" type="text" placeholder="Zip Code"/>
    </div>
    <button type="submit" class="bnt btn-primary">Submit</button>
</form>